  "keywords": ["Mapper"],
  "homepage": "http://github.com/urakozz/php-class-mapper",
  "license": "MIT",

  "authors": [
    {
      "name": "Yury Kozyrev",
      "email": "urakozz@gmail.com",
      "homepage": "https://github.com/urakozz"
